{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/linked-list/list-tests",  // Path to the compiled binary
        "args": [],  // Program arguments, if any
        "stopAtEntry": false,  // Set to true to stop at the entry point
        "cwd": "${workspaceFolder}",  // Working directory
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",  // Use GDB for debugging
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build",  // Task to run before debugging (e.g., compiling)
        "miDebuggerPath": "/usr/bin/gdb",  // Path to GDB, adjust for your system
        "targetArchitecture": "x64",  // Adjust for your architecture
        "logging": { "engineLogging": true }  // Optional: to log debug engine details
      }
    ]
  }
  